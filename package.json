{
  "name": "thermoboard",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "concurrently \"npm run start:api\" \"npm run start:frontend\"",
    "start:api": "php -S 127.0.0.1:8080 -t api",
    "start:frontend": "ng serve --proxy-config proxy.conf.json",
    "build": "npm run build:frontend && npm run build:api",
    "build:frontend": "ng build",
    "prebuild:api": "cd api && composer install --optimize-autoloader",
    "build:api": "npm run build:api:copy-source && npm run build:api:copy-storage && npm run build:api:copy-vendor",
    "build:api:copy-source": "copyfiles api/app/** api/bootstrap/app.php api/config/** api/database/migrations/** api/database/migrate.php api/routes/** api/.htaccess api/index.php dist",
    "build:api:copy-storage": "copyfiles api/**/.gitignore dist",
    "build:api:copy-vendor": "copyfiles api/vendor/** dist",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.2.4",
    "@angular/common": "^4.2.4",
    "@angular/compiler": "^4.2.4",
    "@angular/core": "^4.2.4",
    "@angular/forms": "^4.2.4",
    "@angular/http": "^4.2.4",
    "@angular/platform-browser": "^4.2.4",
    "@angular/platform-browser-dynamic": "^4.2.4",
    "@angular/router": "^4.2.4",
    "apollo-angular": "^1.0.0",
    "apollo-angular-link-http": "^1.0.1",
    "apollo-cache-inmemory": "^1.1.4",
    "apollo-client": "^2.0.4",
    "concurrently": "^3.5.1",
    "copyfiles": "^1.2.0",
    "core-js": "^2.4.1",
    "graphql": "^0.11.7",
    "graphql-tag": "^2.6.0",
    "rxjs": "^5.4.2",
    "zone.js": "^0.8.14"
  },
  "devDependencies": {
    "@angular/cli": "1.3.2",
    "@angular/compiler-cli": "^4.2.4",
    "@angular/language-service": "^4.2.4",
    "@types/jasmine": "~2.5.53",
    "@types/jasminewd2": "~2.0.2",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.1.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^1.2.1",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.1.2",
    "ts-node": "~3.2.0",
    "tslint": "~5.3.2",
    "typescript": "~2.3.3"
  }
}
